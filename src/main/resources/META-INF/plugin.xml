<idea-plugin>
    <id>jetbeans.jetbeans</id>
    <name>JetBeans</name>
    <vendor email="andbondstyle@gmail.com" url="https://github.com/AndBondStyle">AndBondStyle</vendor>

    <description>
        JavaBeans&#8482; component model visual editor
    </description>

    <!--<depends>com.intellij.modules.lang</depends>-->

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="JetBeans Component" implementationClass="integration.CustomFileType" fieldName="INSTANCE"
                  language="JetBeans" extensions="bb"/>
        <fileEditorProvider implementation="integration.CustomFileEditorProvider"/>
    </extensions>

    <actions>
        <action id="NewJetBeansFile" class="integration.CustomNewFileAction" text="JetBeans Component"
                description="New JetBeans component"> <!-- TODO: ACTION ICON -->
            <add-to-group group-id="NewGroup" anchor="first"/>
        </action>
    </actions>
</idea-plugin>
